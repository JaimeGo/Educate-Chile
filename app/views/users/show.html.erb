
<div class="center">
<div class="container-fluid well span6">
    <div class="row-fluid">
          <div class="span2" >
          <%= image_tag gravatar_url(current_user.email, 128), class:"img-circle"%>
          </div>

          <div class="span8">
              <h3> <%= @user.name %> <%= @user.last_name %></h3>
              <h6>Email:  <%= @user.email %></h6>
              <h6>Ubicacion: Chile</h6>
          </div>


  </div>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', :back %>
  </div>
  <h1> Proyectos </h1>
  <%= link_to "Crear Nuevo Proyecto", new_project_path %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  </div>
